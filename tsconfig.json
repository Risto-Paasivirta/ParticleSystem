{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020" /* Specify module code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', or 'ESNext'. */,
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "baseUrl": "src",
        "skipLibCheck": false,
        "lib": ["DOM", "ES2020"]
    },
    "include": ["src/**/*.ts", "apps/**/*.ts"]
}
